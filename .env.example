# Ekko CE - Environment Overrides
# Copy to .env and edit as needed.

# API settings
SECRET_KEY=ekko-ce-dev-secret
DEBUG=true
DJANGO_SETTINGS_MODULE=ekko_api.settings.development
DATABASE_URL=postgresql://ekko:ekko123@postgres:5432/ekko_dev
REDIS_URL=redis://:redis123@redis:6379/0
NATS_URL=nats://nats:4222
ALLOWED_HOSTS=localhost,127.0.0.1,api
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Firebase (optional)
FIREBASE_PROJECT_ID=
FIREBASE_AUTH_DOMAIN=
FIREBASE_WEB_API_KEY=
FIREBASE_SERVICE_ACCOUNT_KEY=

# Email
EMAIL_PROVIDER=console
DEFAULT_FROM_EMAIL=noreply@ekko.dev

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123

# Dashboard build-time
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000
VITE_WEBAUTHN_RP_ID=localhost
VITE_WEBAUTHN_RP_NAME=Ekko Dashboard
VITE_APP_NAME=Ekko CE Dashboard
VITE_APP_VERSION=0.1.0

# wasmCloud
WASMCLOUD_LATTICE=ekko-ce
WASMCLOUD_LOG_LEVEL=debug
