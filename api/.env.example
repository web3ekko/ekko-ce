# Django Environment Configuration for Ekko API
# Passwordless Authentication System

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://ekko:ekko@localhost:5432/ekko_api

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Email Configuration
# Choose your email provider: console, sendgrid, or smtp
EMAIL_PROVIDER=console

# Default from email for all providers
DEFAULT_FROM_EMAIL=noreply@ekko.dev

# Option 1: Console Backend (prints emails to console - good for development)
# EMAIL_PROVIDER=console

# Option 2: SendGrid (recommended for production)
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key-here
# SENDGRID_SANDBOX_MODE=False  # Set to True to test without actually sending

# Option 3: SMTP (Gmail, etc.)
# EMAIL_PROVIDER=smtp
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-specific-password  # For Gmail, use app password

# Passwordless Authentication Settings
AUTH_PASSKEY_ENABLED=True
AUTH_EMAIL_MAGIC_LINK_ENABLED=True
AUTH_2FA_REQUIRED=False
AUTH_CROSS_DEVICE_TIMEOUT=300
AUTH_RECOVERY_CODE_COUNT=10
AUTH_DEVICE_TRUST_DURATION=90
AUTH_SESSION_TIMEOUT=30
AUTH_RATE_LIMIT_ATTEMPTS=5

# NATS Configuration (for wasmCloud integration)
NATS_URL=nats://localhost:4222
NATS_SUBJECT_PREFIX=ekko

# Firebase Configuration (optional)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_WEB_API_KEY=your-web-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com

# Firebase Admin SDK Configuration
# For DEVELOPMENT: Use file path to service account JSON
FIREBASE_CREDENTIALS_PATH=/path/to/firebase-service-account.json

# For PRODUCTION: Use JSON string directly (recommended for Docker/K8s)
# FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"your-project",...}'

# WebAuthn/Passkey Configuration
WEBAUTHN_RP_ID=localhost
WEBAUTHN_RP_NAME=Ekko API
WEBAUTHN_ORIGIN=http://localhost:3000
MFA_WEBAUTHN_ALLOW_INSECURE_ORIGIN=True  # Only for development

# Security Settings (Production)
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True